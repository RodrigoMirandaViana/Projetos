@model IEnumerable<Aula_1206.Models.Categoria>

@{
    ViewBag.Title = "Categorias";
}

<h2>@ViewBag.Title</h2>

@*@foreach(string cat in ViewBag.listaCategorias)
{
    @Html.ActionLink(@cat, "Index", "Categorias")
    @: -
}*@

@foreach(var cat in Model)
{
    <dl>
        <dt>@cat.Nome</dt>
        @if (!string.IsNullOrEmpty(cat.Descricao))
        {
            <dd>@cat.Descricao</dd>
        }
        else
        {
            <dd>
                <em>Sem Descrição</em>
            </dd>
        }
    </dl>
}
